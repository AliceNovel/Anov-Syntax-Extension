{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Anov Syntax",
	"patterns": [
		{
            "include": "#comments"
        },
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"comment": "1行コメント: //で開始",
					"name": "comment.line",
					"match": "//.*"
				},
				{
					"comment": "複数行コメント: /*で開始、*/で終了",
					"name": "comment.block",
					"begin": "/*",
					"end": "*/"
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.Anov Syntax",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.Anov Syntax",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.Anov Syntax",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.anov"
}
